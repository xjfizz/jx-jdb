.page {
  height: 100%;
}
.page .main {
  width: 100%;
  background-color: #FFFFFF;
  height: 100%;
}
.page .main .main-content .content {
  padding: 30rpx;
  width: 100%;
}
.page .main .main-content .content .item-agree {
  min-height: 60rpx;
  margin-top: 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.page .main .main-content .content .item-agree .agree-text {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #cccccc;
}
.page .main .main-content .content .item-agree .agree-agreement {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #cccccc;
}
.page .main .main-content .content .item-agree .agree-agreement .agreement-go {
  font-size: 24rpx;
  color: #7683B7;
}
.page .main .main-content .content .item {
  min-height: 100rpx;
  border-bottom: 1px solid #E5E5E5;
  margin-top: 20rpx;
}
.page .main .main-content .content .item .item-title {
  font-size: 30rpx;
  color: #333333;
}
.page .main .main-content .content .item .item-title-msg {
  font-size: 28rpx;
  color: #999999;
}
.page .main .main-content .content .item .item-input-text {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #999999;
}
.page .main .main-content .content .item .item-input {
  margin-top: 5rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.page .main .main-content .content .item .item-input input {
  height: 70rpx;
  width: 100%;
  padding-top: 8rpx;
  padding-bottom: 5rpx;
  line-height: normal;
  text-align: left;
  font-size: 24rpx;
  color: #333333;
}
.page .main .main-content .content .item-bottom {
  width: 100%;
  margin-top: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.page .main .main-content .content .item-bottom .item-submit:active {
  opacity: 0.55;
}
.page .main .main-content .content .item-bottom .item-submit {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 95%;
  height: 70rpx;
  background: #ffc800;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  border-radius: 15rpx;
}
.page .main .main-content .content .item-bottom .item-submit-no {
  background-color: #FFEBA4;
  color: #FFFFFF;
}


radio .wx-radio-input.wx-radio-input-checked {
	border: 1rpx solid #FFC800 !important;
	background: #FFC800 !important;
}

